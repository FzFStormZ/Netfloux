{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}

    <section class="navbar-area p-3 mb-2 bg-primary text-white">
        {% include 'home/navbar.html.twig' %}
    </section>
    <br><br><br><br>

    <div class="jumbotron text-center mt-2">
        <div class="container">
            <div class="row">
            <div class="col-12">
                <h1>{{ series.title }}</h1>
                <br>
                <h3>Season {{ seasons.number }}</h3>
            </div>
            </div>
        </div>
    </div>
    
    
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-10">
            <div class="section-title text-center pb-10">
                <h3 class="title">Episode List</h3>
            </div> <!-- row -->
        </div>
    </div> <!-- row -->
    
    <div class="row justify-content-center">
    {% set i = 0 %}
        {% for episode in episodes %}
        <div class="col-lg-4 col-md-7 col-sm-9">
            <div class="single-features mt-40">
                <div class="features-title-icon text-center">
                    <div class="d-flex justify-content-center">
                        <h4 class="features-title"><a href="#">Episode {{ episode.number }}</a></h4>
                    </div>
                    <p>{{episode.title}}</p>
                </div>
            </div>
        </div>
        {% set i = i + 1 %}
        {% else %}
            <p class="text">No Record Found</p>
        {% endfor %}
    </div>
    
{% endblock %}
